# Для PostgreSQL/MySQL (раскомментировать при необходимости)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=feedback_bot

# ====================
# BOT SETTINGS
# ====================

# Время ответа администратора (в часах)
RESPONSE_TIME_LIMIT=72

# Максимальная длина сообщения
MAX_MESSAGE_LENGTH=4000

# Автоудаление старых сообщений (в днях)
AUTO_DELETE_DAYS=90

# Логирование (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Включить уведомления администраторов
ENABLE_ADMIN_NOTIFICATIONS=true

# Интервал проверки новых сообщений (в секундах)
CHECK_INTERVAL=300

# ====================
# SECURITY
# ====================

# Ключ для шифрования ID пользователей (сгенерировать случайную строку)
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Включить защиту от спама
ANTI_SPAM_ENABLED=true

# Лимит сообщений в минуту
MESSAGES_PER_MINUTE=5

# ====================
# MESSAGES CUSTOMIZATION
# ====================

# Приветственное сообщение
WELCOME_MESSAGE="Добро пожаловать! Отправьте ваше обращение."

# Сообщение после отправки
THANK_YOU_MESSAGE="Спасибо! Ваше сообщение отправлено."

# Правила бота
RULES_MESSAGE="Будьте вежливы и конструктивны."

# ====================
# FEATURES FLAGS
# ====================

# Включить анонимность
ENABLE_ANONYMITY=true

# Включить категории сообщений
ENABLE_CATEGORIES=true

# Включить возможность прикрепления файлов
ENABLE_ATTACHMENTS=false

# Включить систему рейтинга
ENABLE_RATING=false

# Включить автоответы
ENABLE_AUTO_REPLIES=false